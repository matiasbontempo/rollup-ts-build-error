{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "DOM",
      "ES2017",
      "ES2019",
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "noResolve": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"],
}